@model IEnumerable<ssd_task.Models.Employee>
@{
    ViewBag.Title = "Employee Import";
}

<h2 style="color: #7A1CAC; text-align: center; font-family: Arial, sans-serif;">Employee Import</h2>

<form asp-action="Import" asp-controller="Home" method="post" enctype="multipart/form-data">
    <input type="file" name="fileUpload" />
    <button type="submit">Import</button>
</form>

@if (ViewBag.Feedback != null)
{
    <div>@ViewBag.Feedback</div>
}

@if (Model != null && Model.Any())
{
    <table>
        <thead>
            <tr>
                <th>Personnel_Records</th>
                <th>Forenames</th>
                <th>Surname</th>
                <th>Date of Birth</th>
                <th>Telephone</th>
                <th>Mobile</th>
                <th>Address</th>
                <th>Address 2</th>
                <th>Postcode</th>
                <th>Email Home</th>
                <th>Start Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Personnel_Records</td>
                    <td>@employee.Forenames</td>
                    <td>@employee.Surname</td>
                    <td>@employee.Date_of_Birth.ToShortDateString()</td>
                    <td>@employee.Telephone</td>
                    <td>@employee.Mobile</td>
                    <td>@employee.Address</td>
                    <td>@employee.Address_2</td>
                    <td>@employee.Postcode</td>
                    <td>@employee.EMail_Home</td>
                    <td>@employee.Start_Date.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No employees found.</p>
}
